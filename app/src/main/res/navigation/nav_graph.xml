<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tasksFragment">

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.madokasoftwares.mvvmkotlin.ui.tasks.TasksFragment"
        android:label="fragment_tasks"
        tools:layout="@layout/fragment_tasks" >
        <action
            android:id="@+id/action_tasksFragment_to_addEditTaskFragment3"
            app:destination="@id/addEditTaskFragment3" />
    </fragment>
    <fragment
        android:id="@+id/addEditTaskFragment3"
        android:name="com.madokasoftwares.mvvmkotlin.ui.addedittask.AddEditTaskFragment"
        android:label="fragment_add_edit_task"
        tools:layout="@layout/fragment_add_edit_task" >
        <argument
            android:name="task"
            app:argType="com.madokasoftwares.mvvmkotlin.data.Task"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>

    <!--
    display our task fragment using the navigation component
    navigation component-it makes it easier to navigate between different fragments
    navigation component-contains all the different destinations of our app
    -->